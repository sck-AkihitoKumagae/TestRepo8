<Window x:Class="SpecDocGenerator.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpecDocGenerator.WPF"
        xmlns:vm="clr-namespace:SpecDocGenerator.WPF.ViewModels"
        xmlns:converters="clr-namespace:SpecDocGenerator.WPF.Converters"
        mc:Ignorable="d"
        Title="プログラム仕様書作成アプリケーション - Specification Document Generator" 
        Height="800" Width="1400" 
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="5,5,0,0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Section: Configuration -->
        <GroupBox Grid.Row="0" Header="設定 / Configuration" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Target Folder -->
                <Label Grid.Row="0" Grid.Column="0" Content="対象フォルダ:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding TargetFolderPath}" IsReadOnly="True"/>
                <Button Grid.Row="0" Grid.Column="2" Content="参照..." Command="{Binding SelectTargetFolderCommand}"/>

                <!-- Output File -->
                <Label Grid.Row="1" Grid.Column="0" Content="出力先:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding OutputFilePath}"/>
                <Button Grid.Row="1" Grid.Column="2" Content="参照..." Command="{Binding SelectOutputFileCommand}"/>

                <!-- Exclude Pattern -->
                <Label Grid.Row="2" Grid.Column="0" Content="除外パターン:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding ExcludePattern}" 
                         ToolTip="カンマ区切りで除外するフォルダ名を指定 (例: bin,obj,node_modules)"/>

                <!-- Language Filter -->
                <Label Grid.Row="3" Grid.Column="0" Content="言語フィルタ:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding LanguageFilter}"
                         ToolTip="カンマ区切りで対象言語を指定 (空欄=全言語。例: csharp,python,javascript)"/>
            </Grid>
        </GroupBox>

        <!-- Middle Section: Main Content -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: File Tree -->
            <GroupBox Grid.Column="0" Header="ファイル一覧 / Files" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                        <Label Content="ファイル数:" FontWeight="Bold"/>
                        <Label Content="{Binding TotalFiles}"/>
                        <Label Content="/" Margin="5,0"/>
                        <Label Content="要素数:" FontWeight="Bold" Margin="10,0,0,0"/>
                        <Label Content="{Binding TotalElements}"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" ItemsSource="{Binding FileTree}" 
                              AutoGenerateColumns="False" IsReadOnly="True"
                              HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ファイル名" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="言語" Binding="{Binding Language}" Width="60"/>
                            <DataGridTextColumn Header="行数" Binding="{Binding Lines}" Width="50"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="LightGray"/>

            <!-- Right: Preview and Progress -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Progress Section -->
                <GroupBox Grid.Row="0" Header="進捗 / Progress" Padding="10" Margin="0,0,0,5">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Content="フェーズ:" FontWeight="Bold"/>
                            <Label Grid.Column="1" Content="{Binding CurrentPhase}"/>
                        </Grid>
                        <TextBlock Text="{Binding ProgressMessage}" Margin="5" TextWrapping="Wrap"/>
                        <ProgressBar Height="25" Margin="5" Value="{Binding ProgressPercentage}" Maximum="100"/>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Content="0%" FontSize="10"/>
                            <Label Grid.Column="1" Content="{Binding ProgressPercentage, StringFormat='{}{0}%'}" 
                                   FontWeight="Bold" HorizontalAlignment="Center"/>
                            <Label Grid.Column="2" Content="100%" FontSize="10"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- Preview Tabs -->
                <GroupBox Grid.Row="1" Header="プレビュー / Preview" Padding="5">
                    <TabControl>
                        <TabItem Header="概要">
                            <ScrollViewer>
                                <TextBlock Text="{Binding PreviewOverview}" Margin="10" TextWrapping="Wrap"/>
                            </ScrollViewer>
                        </TabItem>
                        <TabItem Header="機能仕様">
                            <ScrollViewer>
                                <TextBlock Text="{Binding PreviewFunctionalSpec}" Margin="10" TextWrapping="Wrap"/>
                            </ScrollViewer>
                        </TabItem>
                        <TabItem Header="API仕様">
                            <ScrollViewer>
                                <TextBlock Text="{Binding PreviewApiSpec}" Margin="10" TextWrapping="Wrap"/>
                            </ScrollViewer>
                        </TabItem>
                        <TabItem Header="データ構造">
                            <ScrollViewer>
                                <TextBlock Text="{Binding PreviewDataStructure}" Margin="10" TextWrapping="Wrap"/>
                            </ScrollViewer>
                        </TabItem>
                        <TabItem Header="依存関係">
                            <ScrollViewer>
                                <TextBlock Text="{Binding PreviewDependencies}" Margin="10" TextWrapping="Wrap"/>
                            </ScrollViewer>
                        </TabItem>
                        <TabItem Header="テスト観点">
                            <ScrollViewer>
                                <TextBlock Text="{Binding PreviewTestPerspectives}" Margin="10" TextWrapping="Wrap"/>
                            </ScrollViewer>
                        </TabItem>
                        <TabItem Header="リスク">
                            <ScrollViewer>
                                <TextBlock Text="{Binding PreviewRisks}" Margin="10" TextWrapping="Wrap"/>
                            </ScrollViewer>
                        </TabItem>
                        <TabItem Header="変更履歴">
                            <ScrollViewer>
                                <TextBlock Text="{Binding PreviewChangeHistory}" Margin="10" TextWrapping="Wrap"/>
                            </ScrollViewer>
                        </TabItem>
                    </TabControl>
                </GroupBox>
            </Grid>
        </Grid>

        <!-- Bottom Section: Control Buttons -->
        <GroupBox Grid.Row="2" Header="操作 / Controls" Padding="10" Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="開始 / Start" Command="{Binding StartAnalysisCommand}" 
                            IsEnabled="{Binding IsProcessing, Converter={StaticResource InverseBooleanConverter}}"
                            Background="#4CAF50" Foreground="White" FontWeight="Bold"/>
                    <Button Content="一時停止 / Pause" Command="{Binding PauseCommand}"/>
                    <Button Content="再開 / Resume" Command="{Binding ResumeCommand}"/>
                    <Button Content="キャンセル / Cancel" Command="{Binding CancelCommand}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="設定 / Settings" Command="{Binding OpenSettingsCommand}"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>

{
  "LLM": {
    "Provider": "AzureOpenAI",
    "AzureOpenAI": {
      "Endpoint": "",
      "ApiKey": "",
      "DeploymentName": "gpt-4"
    },
    "Temperature": 0.3,
    "MaxTokens": 4000
  },
  "Analysis": {
    "MaxChunkSize": 4000,
    "ExcludedDirectories": [
      "node_modules",
      "bin",
      "obj",
      "dist",
      "build",
      ".git",
      "vendor",
      "packages",
      "__pycache__",
      ".venv",
      "venv",
      "target"
    ],
    "SupportedExtensions": [
      ".cs",
      ".py",
      ".js",
      ".jsx",
      ".ts",
      ".tsx",
      ".java",
      ".cpp",
      ".cc",
      ".cxx",
      ".hpp",
      ".h",
      ".c",
      ".go",
      ".rs",
      ".rb",
      ".php",
      ".swift",
      ".kt",
      ".kts",
      ".scala"
    ]
  },
  "Output": {
    "DefaultFileName": "仕様書.xlsx",
    "IncludeSourceLinks": true,
    "MaxRowsPerSheet": 10000
  }
}
